{
  "name": "Dotfiles ZSH Development Environment",
  
  // Use Docker Compose for production setup
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/dotfiles",
  
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/dotfiles,type=bind,consistency=cached"
  ],
  
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.cwd": "/workspaces/dotfiles",
        "mise.enableShellIntegration": true,
        "terminal.integrated.env.linux": {
          "SHELL": "/bin/zsh"
        }
      },
      "extensions": [
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml", 
        "ms-python.python",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  
  "features": {
    // Use features for additional tools when needed
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dockerComposeVersion": "v2"
    }
  },
  
  "postCreateCommand": [
    "/bin/zsh", "-c", 
    "chmod +x /workspaces/dotfiles/.devcontainer/test-zsh-mise.sh && /workspaces/dotfiles/.devcontainer/test-zsh-mise.sh"
  ],
  
  "remoteUser": "vscode",
  
  // Performance and resource optimization
  "initializeCommand": "echo 'Initializing ZSH DevContainer...'",
  "onCreateCommand": "echo 'ZSH DevContainer created successfully!'",
  "updateContentCommand": "echo 'Updating mise tools...' && /bin/zsh -c 'source ~/.zshrc && mise upgrade'",
  
  // Resource limits for production use
  "hostRequirements": {
    "memory": "4gb",
    "storage": "10gb"
  }
}
